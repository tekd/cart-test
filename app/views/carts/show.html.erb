<h2>Your Shopping Cart</h2>

<table class="table table-striped">

  <thead>
    <tr>
      <th>Quantity</th>
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>

<% @cart_items.each do |item| %>
    <tbody>
      <tr>
        <td><%=item.quantity%></td>
        <td><%=item.product.name%></td>
        <td><%=item.product.price%></td>
        <td><%=button_to "Remove item", remove_from_cart_path(product_id:item.product.id, cart_id:@cart.id), method: "post", class: "btn btn-default" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
  <table class="table table-striped">
  <thead>
    <tr>
    <th>Total Quantity</th>
    <th>Total Cost</th>
  </tr>
    <tbody>
      <tr>
        <td><%=@cart_qty%></td>
        <td><%=@cart.total%></td>
      </tr>
    </tbody>
  </thead>
</table>




